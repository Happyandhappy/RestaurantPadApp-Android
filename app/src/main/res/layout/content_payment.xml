<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.fleissig.restaurantapp.payment.PaymentActivity"
    tools:showIn="@layout/activity_payment">

    <Button
        android:id="@+id/buttonReadCC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="426dp"
        android:text="Ler Cartao"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonPay" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número do Cartão"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintVertical_bias="0.137"
        android:id="@+id/textView2"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/editCCNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginLeft="74dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="93dp" 
        android:imeOptions="actionDone|flagNoExtractUi"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CCV"
        android:layout_marginTop="243dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="175dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/editNada2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_marginTop="42dp"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        android:layout_marginLeft="72dp" 
        android:imeOptions="actionDone|flagNoExtractUi"/>

    <EditText
        android:id="@+id/editNada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_marginTop="42dp"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        android:layout_marginLeft="72dp" 
        android:imeOptions="actionDone"/>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/editCCNumber" 
        android:imeOptions="actionDone|flagNoExtractUi"/>

    <EditText
        android:id="@+id/editCCV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/editNada2"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="74dp" 
        android:imeOptions="actionDone|flagNoExtractUi"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Validade"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="141dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/buttonPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pagar"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/editCCV"
        android:layout_marginLeft="426dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/mTextView"
        android:layout_width="347dp"
        android:layout_height="160dp"
        android:ems="10"
        android:inputType="text"
        android:layout_marginTop="220dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginLeft="28dp"
        android:imeOptions="actionDone|flagNoExtractUi"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>
