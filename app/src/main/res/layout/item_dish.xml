<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/listview_vertical_padding"
    android:background="@color/white"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/ivDishIcon"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:paddingTop="@dimen/listview_vertical_padding_large"
        android:scaleType="fitCenter"
        android:src="@drawable/no_image"
        android:visibility="visible" />

    <com.example.fleissig.restaurantapp.ui.widgets.textviews.RoxwinRegularTextView
        android:id="@+id/dish_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivDishIcon"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/listview_vertical_padding"
        android:paddingLeft="@dimen/listview_horizontal_padding"
        android:paddingRight="@dimen/listview_horizontal_padding"
        android:paddingTop="@dimen/listview_vertical_padding_large"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:text="DESTILADOS" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/dish_name"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/grey"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"></View>

    <com.example.fleissig.restaurantapp.ui.widgets.textviews.RoxwinRegularTextView
        android:id="@+id/tvDishDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:gravity="center_horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="10dp"
        android:text="Polvo grelhado com tomate defumado e croquete de batataPolvo grelhado com tomate defumado e croquete de batataPolvo grelhado com tomate defumado e croquete de batataPolvo grelhado com tomate defumado e croquete de batataPolvo grelhado com tomate defumado e croquete de batataPolvo grelhado com tomate defumado e croquete de batata"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <com.example.fleissig.restaurantapp.ui.widgets.textviews.RoxwinRegularTextView
        android:id="@+id/tvPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDishDescription"
        android:gravity="center_horizontal"
        android:paddingBottom="20dp"
        android:text="R$ 56"
        android:textColor="@color/prune"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/tvPrice"
        android:layout_alignRight="@+id/tvPrice"
        android:background="@drawable/prune_button_selector"
        android:textColor="@color/white"
        android:text="+"
        android:textSize="20sp" />
</RelativeLayout>
